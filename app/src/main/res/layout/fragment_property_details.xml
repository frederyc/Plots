<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.createListing.fragments.FragmentPropertyDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        android:gravity="center"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:scaleType="centerCrop"
                android:layout_marginVertical="16dp"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:src="@drawable/amenities_icon" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="@font/rozanova_hum_demo_semibold"
                android:textColor="#b4b4b4"
                android:text="Amenities"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginVertical="4dp"
                android:fontFamily="@font/sentic_text_bold"
                android:textColor="#b4b4b4"
                android:text="Level 1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/roadAccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Road access"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

                <CheckBox
                    android:id="@+id/water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Water"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

                <CheckBox
                    android:id="@+id/sewerage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sewerage"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/ac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

                <CheckBox
                    android:id="@+id/gas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gas"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

                <CheckBox
                    android:id="@+id/electricity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electricity"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

                <CheckBox
                    android:id="@+id/internet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Internet"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginVertical="4dp"
                android:fontFamily="@font/sentic_text_bold"
                android:textColor="#b4b4b4"
                android:text="Level 2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:layout_marginVertical="4dp"
                    android:fontFamily="@font/rozanova_geo_demo_semibold"
                    android:textColor="#b4b4b4"
                    android:text="Parking spaces"/>

                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/parkingSpaces"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0.0"
                    android:valueTo="4.0"
                    android:stepSize="1.0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/petFriendly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet friendly"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

                <CheckBox
                    android:id="@+id/garage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Garage"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

                <CheckBox
                    android:id="@+id/balcony"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balcony or Terrace"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginVertical="4dp"
                android:fontFamily="@font/sentic_text_bold"
                android:textColor="#b4b4b4"
                android:text="Level 3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/communityPool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Community pool"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

                <CheckBox
                    android:id="@+id/privatePool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Private pool"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/gym"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gym"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

                <CheckBox
                    android:id="@+id/gatedAccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gated access"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

                <CheckBox
                    android:id="@+id/panoramicView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Panoramic view"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/eCarChargingStation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="eCar charging station"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

                <CheckBox
                    android:id="@+id/onlinePayments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online payments"
                    android:textColor="#646464"
                    android:textSize="13sp"
                    android:fontFamily="@font/rozanova_hum_demo_semibold"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>