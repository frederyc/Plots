<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.createListing.fragments.FragmentPropertyPhotos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:scaleType="centerCrop"
            android:layout_marginVertical="16dp"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:src="@drawable/images_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/selectPhotos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Photos"
            android:background="@drawable/signin_rounded_corners"
            android:fontFamily="@font/rozanova_geo_demo_semibold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/imagesUploadedTextInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:textSize="13sp"
            android:fontFamily="@font/sentic_text_bold"
            android:textAlignment="center"
            android:textColor="#b4b4b4"
            android:text="You have selected 0 photos"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:textSize="12sp"
            android:fontFamily="@font/sentic_text"
            android:textAlignment="center"
            android:textColor="#b4b4b4"
            android:text="- You can pick maximum 20 images -"/>

    </LinearLayout>



</LinearLayout>