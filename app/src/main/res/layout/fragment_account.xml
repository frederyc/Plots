<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_white"
    android:orientation="vertical"
    tools:context=".ui.fragments.account.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_blue"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_baseline_image_24" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:fontFamily="@font/rozanova_hum_demo_semibold"
            android:text="Your Name Here"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/sentic_text"
            android:textColor="#DDDDDD"
            android:text="Your Email Here"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/sentic_text"
            android:textColor="#DDDDDD"
            android:text="Your Phone Here"
            android:layout_marginVertical="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/createListing"
            android:textAllCaps="false"
            android:fontFamily="@font/rozanova_geo_demo_semibold"
            android:textSize="15sp"
            android:layout_marginTop="16dp"
            android:background="@drawable/signin_rounded_corners"
            android:backgroundTint="@color/teal_700"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Listing" />

        <Button
            android:id="@+id/viewMyListings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/signin_rounded_corners"
            android:textAllCaps="false"
            android:fontFamily="@font/rozanova_geo_demo_semibold"
            android:textSize="15sp"
            android:text="View My Listings" />

        <Button
            android:id="@+id/updateCredentials"
            android:layout_width="match_parent"
            android:layout_marginVertical="16dp"
            android:textAllCaps="false"
            android:background="@drawable/signin_rounded_corners"
            android:fontFamily="@font/rozanova_geo_demo_semibold"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="Update Credentials" />

        <Button
            android:id="@+id/signOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/signin_rounded_corners"
            android:textAllCaps="false"
            android:fontFamily="@font/rozanova_geo_demo_semibold"
            android:textSize="15sp"
            android:text="Sign Out" />

        <Button
            android:id="@+id/deleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:background="@drawable/signin_rounded_corners"
            android:textAllCaps="false"
            android:fontFamily="@font/rozanova_geo_demo_semibold"
            android:textSize="15sp"
            android:text="Delete Account" />

    </LinearLayout>


</LinearLayout>